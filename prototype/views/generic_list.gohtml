{{ template "base.gohtml" . }}

{{define "content"}}
    {{if .Model}}
        <div class="table-responsive">
            <table class="table table-hover" data-toggle="table">
                <thead class="table-dark">
                <tr>
                    {{$Lang := .Lang}}
                    {{range th (index .Model 0)}}
                        <th data-field="{{.}}" data-sortable="true">{{i18n $Lang .}}</th>
                    {{end}}
                    <th></th>
                </tr>
                </thead>
                <tbody class="bg-white">
                {{$Path:=.Path}}
                {{range .Model}}
                    <tr>
                        {{td .}}
                        <td style="width: 10px!important;">
                            <a href="{{$Path}}/{{.Id}}">
                                <span data-feather="edit"></span>
                            </a>
                        </td>
                    </tr>
                {{end}}
                </tbody>
            </table>
        </div>
    {{else}}
        {{i18n .Lang "no_records_found"}}
    {{end}}
    {{template "pagination.gohtml" .}}
{{end}}

{{define "options"}}
    <div class="btn-group me-2">
        <a class="btn btn-sm btn-outline-warning">
            <span data-feather="download"></span> {{i18n .Lang "export"}}
        </a>
    </div>
    <div class="btn-group">
        <a class="btn btn-sm btn-success" href="{{.Path}}/new">
            <span data-feather="plus-square"></span> {{i18n .Lang "new"}}
        </a>
    </div>
{{end}}