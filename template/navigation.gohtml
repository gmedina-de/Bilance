{{define "navigation"}}
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
            {{if .SelectedProjectId}}
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link{{active .Path "/"}}" href="/">
                            <span data-feather="layers"></span>{{translate "payments"}}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{{active .Path "/categories/"}}" href="/categories/">
