{{define "table"}}
    <thead>
    <tr>
        <th>{{translate "name"}}<br>{{translate "date"}}</th>
        <th><i>{{translate "Type"}}</i><br><b>{{translate "amount"}}</b></th>
        <th>{{translate "payer"}}<br>{{translate "payee"}}</th>
    </tr>
    </thead>
    <tbody>
    {{$Path:=.Path}}
    {{range .Data}}
        <tr onclick="window.location.href='{{$Path}}/edit?Id={{.Id}}';">
            <td>{{.Name}}<br>{{.Date}}</td>
            <td><i>{{.Type.Name}}</i><br><b>{{.Amount}}</b></td>
            <td>{{.Payer.Name}}<span data-feather="arrow-right"></span><br>{{.Payee.Name}}</td>
        </tr>
    {{end}}
    </tbody>
{{end}}

{{define "form"}}
    <div class="col-12">

        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Ausgabe</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Geldtransfer</a>
            </li>
            <li class="nav-item">
