            </li>
        </ul>
    </div>

    <div class="col-5">
        <div class="form-floating">
            <select class="form-control form-select-lg" name="Name" id="name" required>
                <option>User</option>
                <option>User2</option>
            </select>
            <label for="name">{{translate "payer"}}</label>
        </div>
    </div>
    <div class="col-2">
        <span data-feather="arrow-right" style="width:100%;height:2rem;margin-top: 1rem;"></span>
    </div>
    <div class="col-5">
        <div class="form-floating">
            <select class="form-control form-select-lg" name="Name" id="name" disabled required>
                <option>AuÃŸenwelt</option>
                <option>User2</option>
            </select>
            <label for="name">{{translate "payee"}}</label>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-floating">
            <input type="text" class="form-control" name="Name" id="name" placeholder="{{translate "name"}}"
                   value="{{.Data.Name}}" required>
            <label for="name">{{translate "name"}}</label>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-floating">
            <select class="form-control" name="Name" id="name" required>
                <option>Type1</option>
                <option>Type2</option>
            </select>
            <label for="name">{{translate "Type"}}</label>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="input-group form-floating">
            <input type="text" class="form-control" name="Amount" id="amount" placeholder="{{translate "amount"}}"
                   value="{{.Data.Amount}}" required>
            <span class="input-group-text">â‚¬</span>
            <label for="amount" style="z-index: 10;">{{translate "amount"}}</label>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="form-floating">
            <input type="date" class="form-control" name="Name" id="name" placeholder="{{translate "date"}}"
                   value="{{.Data.Date}}" required>
            <label for="name">{{translate "date"}}</label>
        </div>
    </div>
{{end}}